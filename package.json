{
  "name": "react-monorepo",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "install:all": "pnpm install --recursive",
    "dev": "pnpm -r --workspace-concurrency=1 run dev",
    "dev:admin": "pnpm --filter @apps/admin dev",
    "dev:client": "pnpm --filter @apps/client dev",
    "dev:vendor": "pnpm --filter @apps/vendor dev",
    "build": "pnpm -r run build",
    "build:admin": "pnpm --filter @apps/admin build",
    "build:client": "pnpm --filter @apps/client build",
    "build:vendor": "pnpm --filter @apps/vendor build",
    "build:all": "pnpm run build:admin && pnpm run build:client && pnpm run build:vendor",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r --if-present run test"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7"
  }
}
